{
  "defaults": {
    "includeGitignore": {
      "includes": ["static:_gitignore.ejs"]
    },
    "includeBinWWW": {
      "includes": ["static:bin-www.ejs"]
    },
    "includePackage": {
      "includes": ["static:package.json.ejs"]
    },
    "includeApp": {
      "includes": [
        "template:app",
        "insert:app:ejsViews",
        "insert:app:sessions"
      ]
    }
  },
  "options": {
    "includeProcfile": {
      "command":  ["-p, --include-procfile", "include a Procfile for Heroku"],
      "includes": ["static:procfile"]
    }
  }
}
